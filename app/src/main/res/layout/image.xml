<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear_All"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical">
		<TextView
			android:id="@+id/titleFile"
			android:layout_width="250dp"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:background="#37474F"
			android:textSize="16sp"
			android:textColor="#FFFFFF"
			android:alpha="0.8"/>
		<ImageView
			android:id="@+id/imgLoad"
			android:layout_width="250dp"
			android:layout_height="250dp"
			android:background="#263238"
			android:src="@drawable/ic_image_white"
			android:scaleType="fitCenter"
			android:alpha="0.8"/>
		<TextView
			android:id="@+id/time"
			android:layout_width="250dp"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:background="#37474F"
			android:gravity="center_horizontal"
			android:textSize="14sp"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:alpha="0.8"/>
		<LinearLayout
			android:id="@+id/linear_H1"
			android:layout_width="match_parent"
			android:layout_height="30dp"
			android:padding="8dp"
			android:orientation="horizontal"/>
		<Button
			android:id="@+id/button__1_but"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:padding="8dp"
			android:text="file image"
			android:textSize="12sp"
			android:textColor="#000000"
			android:alpha="0.8"/>
		<LinearLayout
			android:id="@+id/linear_H2"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:padding="8dp"
			android:orientation="horizontal"/>
		<ScrollView
			android:id="@+id/vscroll_V_H1"
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:padding="8dp"
			android:alpha="0.8">
			<TextView
				android:id="@+id/imageText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:textSize="12sp"
				android:textColor="#000000"/>
		</ScrollView>
		<Button
			android:id="@+id/Copy__1_All"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:padding="8dp"
			android:text="save file"
			android:textSize="12sp"
			android:textColor="#000000"
			android:alpha="0.8"/>
	</LinearLayout>
</LinearLayout>
